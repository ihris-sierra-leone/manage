                <configurationGroup name="display">
                  <configurationGroup name="default">
                    <configuration name="fields" values="single" type="string">
                      <value>county</value>
                    </configuration>
                  </configurationGroup>
                </configurationGroup>
              </configurationGroup>
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <displayName>The headers for this field.</displayName>
                <value>default:Chiefdom/Ward</value>
              </configuration>
              <configuration name="required" type="boolean" values="single">
