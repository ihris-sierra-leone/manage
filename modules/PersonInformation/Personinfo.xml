<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="person-Information">
  <metadata>
    <displayName>iHRIS Manage Person</displayName>
    <category>LOCALISED Modules</category>
    <description>The iHRIS Manage Person</description>
    <creator>iHRIS Tanzania</creator>
    <email>support@zalongwa.com</email>
    <link>https://launchpad.net/pmoralg</link>
    <version>4.3.0</version>
    <path name="configs">
      <value>./configs</value>
    </path>
    <requirement name="ihris-manage-Person">
      <atLeast version="4.2" />
    </requirement>
    <path name="classes">
      <value>./lib</value>
    </path>
    <path name="templates">
      <value>./templates</value>
    </path>
    <priority>350</priority>
  </metadata>
  <configurationGroup name="person-Information" path="/I2CE">
    <status>overwrite:true</status>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="person">
          <displayName>Person</displayName>
          <description>The Person Form</description>
          <configuration name="class" values="single" type="string">
            <displayName>Class Name</displayName>
            <description>The name of the class providing the form</description>
            <value>person_Information</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <!-- end of /modules/forms/forms-->
      <configurationGroup name="formClasses">
        <configurationGroup name="person_Information">
          <displayName>Configuration for the class 'person_Information'</displayName>
          <configuration name="extends" values="single" type="string">
            <displayName>The class this form extends</displayName>
            <value>iHRIS_ManagePerson</value>
          </configuration>
          <configurationGroup name="fields">
            <displayName>The fields defined for this form</displayName>
            <version>4.2.0</version>
            <configurationGroup name="residence">
              <version>4.2.0</version>
              <displayName>The field 'residence'</displayName>
              <configuration name="formfield" values="single" type="string">
                <displayName>The form field type</displayName>
                <value>MAP</value>
              </configuration>
              <configurationGroup name="meta">
                <configuration name="form" values="many" type="string">
                  <value>district</value>
                  <value>ward</value>
                  <!-- <value>village</value> -->
                </configuration>
                <configurationGroup name="limits">
                  <version>4.2.0</version>
                  <configurationGroup name="default">
                    <configurationGroup name="country">
                      <configuration name="operator" values="single" type="string">
                        <value>FIELD_LIMIT</value>
                      </configuration>
                      <configuration name="field" values="single" type="string">
                        <value>location</value>
                      </configuration>
                      <configuration name="style" values="single" type="string">
                        <value>yes</value>
                      </configuration>
                    </configurationGroup>
                  </configurationGroup>
                </configurationGroup>
                <configurationGroup name="display">
                  <configurationGroup name="default">
                    <configuration name="fields" values="single" type="string">
                      <value>district</value>
                    </configuration>
                  </configurationGroup>
                </configurationGroup>
              </configurationGroup>
              <configuration name="headers" type="delimited" values="many" locale="en_US">
                <displayName>The headers for this field.</displayName>
                <version>4.2.0</version>
                <value>default:District (of origin)</value>
              </configuration>
              <configuration name="required" type="boolean" values="single">
                <displayName>This field is required to be set</displayName>
                <value>true</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="academic_edu_lev">
              <displayName>The field 'academic_edu_lev'</displayName>
              <configuration name="formfield" values="single" type="string">
                <displayName>The form field type</displayName>
                <version>4.2.0</version>
                <value>MAP</value>
              </configuration>
              <configurationGroup name="meta">
                <configuration name="form" values="many" type="string">
                  <version>4.2.0</version>
                  <value>degree</value>
                </configuration>
                <configurationGroup name="display">
                  <version>4.2.0</version>
                  <configurationGroup name="default">
                    <configuration name="fields" values="single" type="string">
                      <value>degree</value>
                    </configuration>
                  </configurationGroup>
                </configurationGroup>
              </configurationGroup>
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <displayName>The headers for this field.</displayName>
                <version>4.2.0</version>
                <value>default:Highest Level of Education</value>
              </configuration>
              <configuration name="required" type="boolean" values="single">
                <displayName>This field is required to be set</displayName>
                <value>true</value>
              </configuration>
            </configurationGroup>
