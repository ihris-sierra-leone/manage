<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="customised-LastPromotion" path="/I2CE">
  <metadata>
    <version>4.3.0</version>
  </metadata>
  <configurationGroup name="customised-LastPromotion" path="/I2CE" locale="en_US">
    <version>4.2.0</version>
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="en_US">
      <configuration name="person_can_view_child_form_lastpromotion" locale="en_US" values="single" type="string">
        <value>Can view last promotion child form of a person</value>
      </configuration>
      <configuration name="person_can_edit_child_form_lastpromotion" locale="en_US" values="single" type="string">
        <value>Can edit last promotion child forms of a person</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms">
      <configurationGroup name="forms">
        <configurationGroup name="lastpromotion">
          <configuration name="display" values="single" locale="en_US" type="string">
            <value>Promotion Information</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <configurationGroup name="CUSTOMISED_LastPromotion">
          <configurationGroup name="fields">
            <configurationGroup name="job">
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <value>default:Promoted to: (Title)</value>
              </configuration>
            </configurationGroup>
            <!--
            <configurationGroup name="titlecode">
              <configuration name="headers" type="delimited" locale="en_US">
                <value>default:Title Code</value>
              </configuration>
            </configurationGroup>
            -->
            <configurationGroup name="promotionletter">
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <value>default:Letter of Promotion</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="promotiondate">
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <value>default:Date of Promotion</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="salaryperannum">
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <value>default:Salary per Annum</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="confirmedinappointment">
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <value>default:Confirmed in Appointment</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="persontoholdergrade">
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <value>default:Personal-to-Holder Grade</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="page">
      <configurationGroup name="lastpromotion">
        <configurationGroup name="args">
          <configuration name="title" values="single" locale="en_US" type="string">
            <value>Add/Update Promotion Information</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>