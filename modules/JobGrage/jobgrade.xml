                <value>true</value>
              </configuration>
            </configurationGroup> -->
            <!-- Disable Code -->
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>