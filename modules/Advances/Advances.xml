<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="Advances">
  <metadata>
    <displayName>Advance Details</displayName>
    <className>iHRIS_Module_Advances</className>
    <category>CUSTOMISED Modules</category>
    <description>Records details of employee acting position information</description>
    <creator>iHRIS Tanzania</creator>
    <email>support@zalongwa.com</email>
    <version>4.3.0</version>
    <requirement name="ihris-common">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <requirement name="Person">
      <atLeast version="4.3" />
      <lessThan version="4.4" />
    </requirement>
    <path name="classes">
      <value>./lib</value>
    </path>
    <path name="templates">
      <value>./templates</value>
    </path>
    <priority>350</priority>
  </metadata>
  <configurationGroup name="Advances" path="/modules/Advances">
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="en_US">
      <configuration name="person_can_view_child_form_advances" locale="en_US" values="single" type="string">
        <version>4.2.0</version>
        <value>Can view advances child form of a person</value>
      </configuration>
      <configuration name="person_can_edit_child_form_advances" locale="en_US" values="single" type="string">
        <version>4.2.0</version>
        <value>Can edit advances child forms of a person</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks_trickle_down" path="/I2CE/tasks/task_trickle_down/">
      <configuration name="person_can_view_child_form_advances" values="many" type="string">
        <version>4.2.0</version>
        <value>person_can_view</value>
      </configuration>
      <configuration name="person_can_edit_child_form_advances" values="many" type="string">
        <version>4.2.0</version>
        <value>person_can_view_child_form_advances</value>
        <value>person_can_view</value>
      </configuration>
      <configuration name="person_can_view_child_forms" values="many" type="string">
        <version>4.2.0</version>
        <value>person_can_view_child_form_advances</value>
      </configuration>
      <configuration name="person_can_edit_child_forms" values="many" type="string">
        <version>4.2.0</version>
        <value>person_can_edit_child_form_advances</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="Advances_formClass" path="/modules/forms/formClasses/Advances">
      <displayName>Advances</displayName>
      <version>4.2.0.1</version>
      <configuration name="extends" values="single" type="string">
        <displayName>Extends</displayName>
        <value>I2CE_Form</value>
      </configuration>
      <configurationGroup name="fields">
        <displayName>Fields</displayName>
        <configurationGroup name="dateAdvDisbursed">
          <displayName>Date Advance Disbursed</displayName>
          <configuration name="formfield" values="single" type="string">
            <displayName>Formfield</displayName>
            <value>DATE_YMD</value>
          </configuration>
          <configuration name="default_eval" values="single" type="string">
            <displayName>The default value</displayName>
            <value>I2CE_Date::blank()</value>
          </configuration>
          <configurationGroup name="headers">
            <displayName>Headers</displayName>
            <configuration name="default" values="single" type="string">
              <displayName>Default</displayName>
              <value>Date Advance Disbursed</value>
            </configuration>
          </configurationGroup>
          <configuration name="required" values="single" type="string">
            <displayName>Required</displayName>
            <value>1</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="advType">
          <displayName>Advance Type</displayName>
          <configuration name="formfield" values="single" type="string">
            <displayName>Formfield</displayName>
            <value>STRING_LINE</value>
          </configuration>
          <configuration name="required" values="single" type="string">
            <displayName>Required</displayName>
            <value>0</value>
          </configuration>
          <configurationGroup name="headers">
            <displayName>Headers</displayName>
            <configuration name="default" values="single" type="string">
              <displayName>Default</displayName>
              <value>Advance Type</value>
            </configuration>
          </configurationGroup>
        </configurationGroup>
        <configurationGroup name="firstDeduction">
          <displayName>Date of First Deduction</displayName>
          <configuration name="formfield" values="single" type="string">
            <displayName>Formfield</displayName>
            <value>DATE_YMD</value>
          </configuration>
          <configuration name="default_eval" values="single" type="string">
            <displayName>The default value</displayName>
            <value>I2CE_Date::blank()</value>
          </configuration>
          <configurationGroup name="headers">
            <displayName>Headers</displayName>
            <configuration name="default" values="single" type="string">
              <displayName>Default</displayName>
              <value>Date of First Deduction</value>
            </configuration>
          </configurationGroup>
          <configuration name="required" values="single" type="string">
            <displayName>Required</displayName>
            <value>1</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="lastDeduction">
          <displayName>Date of Last Deduction</displayName>
          <configuration name="formfield" values="single" type="string">
            <displayName>Formfield</displayName>
            <value>DATE_YMD</value>
          </configuration>
          <configuration name="default_eval" values="single" type="string">
            <displayName>The default value</displayName>
            <value>I2CE_Date::blank()</value>
          </configuration>
          <configurationGroup name="headers">
            <displayName>Headers</displayName>
            <configuration name="default" values="single" type="string">
              <displayName>Default</displayName>
              <value>Date of Last Deduction</value>
            </configuration>
          </configurationGroup>
          <configuration name="required" values="single" type="string">
            <displayName>Required</displayName>
            <value>1</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="amountDue">
          <displayName>Amount to be Paid</displayName>
          <configuration name="formfield" values="single" type="string">
            <displayName>Formfield</displayName>
            <value>CURRENCY</value>
          </configuration>
          <configurationGroup name="headers">
            <displayName>Headers</displayName>
            <configuration name="default" values="single" type="string">
              <displayName>Default</displayName>
              <value>Amount to be Paid</value>
            </configuration>
          </configurationGroup>
          <configuration name="required" values="single" type="string">
            <displayName>Required</displayName>
            <value>1</value>
          </configuration>
        </configurationGroup>
        <configurationGroup name="curNetPay">
          <displayName>Current Net Pay</displayName>
          <configuration name="formfield" values="single" type="string">
            <displayName>Formfield</displayName>
            <value>CURRENCY</value>
          </configuration>
          <configurationGroup name="headers">
            <displayName>Headers</displayName>
            <configuration name="default" values="single" type="string">
              <displayName>Default</displayName>
              <value>Current Net Pay</value>
            </configuration>
          </configurationGroup>
          <configuration name="required" values="single" type="string">
            <displayName>Required</displayName>
            <value>1</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="advances" path="/modules/forms/forms/advances">
      <displayName>Advances</displayName>
      <version>4.2.0.1</version>
      <configuration name="class" values="single" type="string">
        <displayName>Class</displayName>
        <value>Advances</value>
      </configuration>
      <configuration name="display" values="single" type="string">
        <displayName>Display</displayName>
        <value>Advances</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="person" path="/modules/forms/forms/person">
      <configurationGroup name="meta">
        <configuration name="child_forms" values="many" type="string">
          <displayName>Child Forms</displayName>
          <version>4.2.0</version>
          <value>advances</value>
        </configuration>
      </configurationGroup>
    </configurationGroup>
    <configurationGroup name="advances" path="/I2CE/page/advances">
      <displayName>Advances</displayName>
      <version>4.2.0.1</version>
      <configurationGroup name="args">
        <displayName>Args</displayName>
        <configuration name="page_form" values="single" type="string">
          <displayName>Page Form</displayName>
          <value>advances</value>
        </configuration>
        <configuration name="title" values="single" type="string">
          <displayName>Title</displayName>
          <value>Edit Advances</value>
        </configuration>
      </configurationGroup>
      <configuration name="style" values="single" type="string">
        <displayName>Style</displayName>
        <value>ihris_manage_page_form_parent_person</value>
      </configuration>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>