<?xml version="1.0"?>
<!DOCTYPE I2CEConfiguration SYSTEM "I2CE_Configuration.dtd">
<I2CEConfiguration name="customised-Disability">
  <metadata>
    <displayName>Disability</displayName>
    <category>CUSTOMISED Modules</category>
    <description>Tracks Disability Information</description>
    <version>4.3.0</version>
    <path name="configs">
      <value>./configs</value>
    </path>
    <path name="templates">
      <value>./templates</value>
    </path>
    <priority>350</priority>
  </metadata>
  <configurationGroup name="customised-Disability" path="/I2CE">
    <configurationGroup name="tasks" path="/I2CE/tasks/task_description" locale="en_US">
      <version>4.1.2</version>
      <configuration name="can_edit_database_list_disability" locale="en_US" values="single" type="string">
        <value>Can edit disability list</value>
      </configuration>
      <configuration name="can_view_database_list_disability" locale="en_US" values="single" type="string">
        <value>Can view disability list</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="tasks_trickle_down" path="/I2CE/tasks/task_trickle_down/">
      <version>4.1.2</version>
      <configuration name="can_edit_database_list_disability" values="many" type="string">
        <value>can_view_database_list_disability</value>
        <value>can_edit_database_lists</value>
      </configuration>
      <configuration name="can_view_database_list_disability" values="many" type="string">
        <value>can_view_database_lists</value>
      </configuration>
    </configurationGroup>
    <configurationGroup name="forms" path="/modules/forms/">
      <displayName>Forms</displayName>
      <description>Information about the forms made available by iHRIS-Common Geography</description>
      <configurationGroup name="forms">
        <displayName>Forms available to the form factory</displayName>
        <status>advanced:true</status>
        <status>required:true</status>
        <configurationGroup name="disability">
          <displayName>Disability</displayName>
          <description>The Disability Form</description>
          <configuration name="class" values="single" type="string">
            <displayName>Class Name</displayName>
            <description>The name of the class providing the form</description>
            <value>CUSTOMISED_Disability</value>
          </configuration>
          <configuration name="display" values="single" type="string">
            <displayName>Display name</displayName>
            <description>The display name for this form</description>
            <value>Disability</value>
          </configuration>
          <configuration name="storage" values="single" type="string">
            <displayName>Storage Details</displayName>
            <description>The storage mechanism for this form.</description>
            <version>4.1.2</version>
            <value>magicdata</value>
          </configuration>
        </configurationGroup>
      </configurationGroup>
      <configurationGroup name="formClasses">
        <displayName>Form Class Configuration</displayName>
        <!--<configurationGroup name="CUSTOMISED_Disability">-->
        <configurationGroup name="CUSTOMISED_Disability">
          <displayName>Configuration for the class 'CUSTOMISED_Disability'</displayName>
          <configuration name="extends" values="single" type="string">
            <displayName>The class this form extends</displayName>
            <value>I2CE_List</value>
          </configuration>
          <configurationGroup name="fields">
            <displayName>The fields defined for this form</displayName>
            <configurationGroup name="name">
              <displayName>The field 'name'</displayName>
              <configuration name="formfield" values="single" type="string">
                <displayName>The form field type</displayName>
                <value>STRING_LINE</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <displayName>The headers for this field.</displayName>
                <version>4.1.2</version>
                <value>default:Name (Blind, etc.)</value>
              </configuration>
              <configuration name="required" type="boolean" values="single">
                <displayName>This field is required to be set</displayName>
                <value>true</value>
              </configuration>
            </configurationGroup>
            <configurationGroup name="code">
              <displayName>The field 'code'</displayName>
              <configuration name="formfield" values="single" type="string">
                <displayName>The form field type</displayName>
                <value>INT</value>
              </configuration>
              <configuration name="headers" type="delimited" locale="en_US" values="single">
                <displayName>The headers for this field.</displayName>
                <version>4.1.2</version>
                <value>default:Code (1, 2, ...)</value>
              </configuration>
              <configuration name="unique" type="boolean" values="single">
                <displayName>This field is required to be unique</displayName>
                <value>true</value>
              </configuration>
            </configurationGroup>
          </configurationGroup>
        </configurationGroup>
      </configurationGroup>
    </configurationGroup>
  </configurationGroup>
</I2CEConfiguration>